<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mapImageView"
            android:layout_width="@dimen/dm_0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="@dimen/dm_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:id="@+id/save_map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@drawable/map_save"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/save_map" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/recovery_map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@drawable/map_save"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/map_restore" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/go_patrol_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@mipmap/go_patrol"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/patrol" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/go_home_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@mipmap/go_home"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/go_home" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_home_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:id="@+id/add_home_iv"
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@drawable/addhome"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/add_home_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/add_home" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/modify_home_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:id="@+id/modify_home_iv"
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@drawable/del_home"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/modify_home_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/delete_home" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_wall_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:id="@+id/add_wall_iv"
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@drawable/addwall"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/add_wall_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/add_wall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/del_wall_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@drawable/delwall"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/del_wall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/clear_map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <ImageView
                    android:layout_width="@dimen/dm_50dp"
                    android:layout_height="@dimen/dm_50dp"
                    android:background="@mipmap/clear"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:text="@string/clear_map" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_0dp"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/del_home_sure_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="@dimen/dm_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cancle" />

                    <Button
                        android:id="@+id/sure"
                        android:layout_width="@dimen/dm_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ensure" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/totleBack"
        android:layout_width="@dimen/dm_50dp"
        android:layout_height="@dimen/dm_50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dm_10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/back_black" />
</FrameLayout>
