<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/md_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dm_400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/see_qr_code_btn"
                style="@style/common_button_style"
                android:layout_margin="@dimen/dm_20dp"
                android:layout_weight="1"
                android:text="@string/sn_see_qr" />

            <Button
                android:id="@+id/our_ware_read_btn"
                style="@style/common_button_style"
                android:layout_margin="@dimen/dm_20dp"
                android:layout_weight="1"
                android:text="@string/robot_params_read" />

            <Button
                android:id="@+id/our_ware_ok_btn"
                style="@style/common_button_style"
                android:layout_margin="@dimen/dm_20dp"
                android:layout_weight="1"
                android:text="@string/robot_params_ok" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dm_50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dm_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_SN"
                    style="@style/tv16_999999"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_SN"
                    style="@style/tv16_999999_mw"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_up_computer"
                    style="@style/tv16_999999"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_up_computer"
                    style="@style/tv16_999999_mw"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_up_palte"
                    style="@style/tv16_999999"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_up_palte"
                    style="@style/tv16_999999_mw"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_down_plate"
                    style="@style/tv16_999999"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_down_plate"
                    style="@style/tv16_999999_mw"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_navigation"
                    style="@style/tv16_999999"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_navigation"
                    style="@style/tv16_999999_mw"
                    android:layout_width="@dimen/dm_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>