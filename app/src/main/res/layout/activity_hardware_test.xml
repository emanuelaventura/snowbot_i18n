<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hardware_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/vordiplom_4"
    android:orientation="horizontal"
    tools:context="com.csjbot.snowbot.activity.settings.HardwareTest">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/setSnowBotWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="上身板SN获取"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/SnowBotGetDownSN"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下身板SN获取"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/SnowSelfCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="获取自检信息"
            android:textSize="@dimen/dm_18sp" />


        <Button
            android:id="@+id/SnowBotBoubleArm"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="双臂摆动"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/SnowBotLeftArm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="左臂摆动"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/SnowBotRightArm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="右臂摆动"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/SnowBotSpeechTest"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="TTS_Test"
            android:text="发声测试"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/SnowBotFaceChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="面部表情变换"
            android:textSize="@dimen/dm_18sp" />


        <Button
            android:id="@+id/SnowBotGoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="回去充电"
            android:textSize="@dimen/dm_18sp" />

        <Button
            android:id="@+id/testEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束测试"

            android:textSize="@dimen/dm_18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/vordiplom_4"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/hw_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hw_showText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vordiplom_4"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
