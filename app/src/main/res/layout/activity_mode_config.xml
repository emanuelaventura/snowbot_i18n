<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_28sp"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dm_30dp"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/dm_20dp"
        />

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/confirm_update"
        android:textSize="@dimen/dm_20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="@dimen/dm_20dp"
        android:background="@drawable/selector_tourguide_bt"
        />


</LinearLayout>
