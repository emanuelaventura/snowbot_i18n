<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hardware_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/vordiplom_4"
    android:orientation="horizontal"
    tools:context="com.csjbot.snowbot.activity.settings.HardwareTest">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/ad_hw_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <Button
            android:id="@+id/ad_testEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束测试"

            android:textSize="@dimen/dm_18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/vordiplom_4"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/ad_hw_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ad_hw_showText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vordiplom_4"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
